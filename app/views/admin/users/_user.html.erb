<tr>
  <td scope="row"><%= l(user.created_at, format: :notime) %></td>
  <td><%= user.full_name %></td>
  <td><%= user.email %></td>
  <td><%= user.phone_number %></td>
  <td><%= user.role %></td>
  <td>
    <% if user.admin? %>
      <%= link_to t("user.btn_be_user"), be_user_admin_user_path(user.id), class: "btn btn-info", "data-confirm": t("sure?"), method: :patch %>
    <% elsif user.user? %>
      <%= link_to t("user.btn_banned"), admin_user_path(user.id), class: "btn btn-warning", "data-confirm": t("sure?"), method: :patch %>
      <%= link_to t("user.btn_be_admin"), be_admin_admin_user_path(user.id), class: "btn btn-info", "data-confirm": t("sure?"), method: :patch %>
    <% else %>
      <%= link_to t("user.btn_be_user"), be_user_admin_user_path(user.id), class: "btn btn-info", "data-confirm": t("sure?"), method: :patch %>
      <%= link_to t("user.btn_delete"), admin_user_path(user.id), class: "btn btn-danger", "data-confirm": t("sure?"), method: :delete %>
    <% end %>
  </td>
  <td class="text-center">
    <%= link_to "&#8594;".html_safe, "#userInfo#{user.id}", class: "btn btn-secondary rounded-circle", "data-toggle": "modal" %>
    <div class="tour-modal modal fade" id="userInfo<%= user.id %>" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="close-modal" data-dismiss="modal">
            <%= image_tag "close-icon.svg", alt: "Close modal" %>
          </div>
          <div class="container">
            <div class="modal-body">
              <h2 class="text-uppercase mb-5">[<%= user.role %>] <%= user.full_name %></h2>
              <div class="row mb-2">
                <div class="col-md-6 mx-auto">
                  <div class="row">
                    <div class="d-inline font-weight-bold"><%= t "user.email" %> </div>
                    <%= user.email %>
                  </div>
                  <div class="row">
                    <div class="d-inline font-weight-bold"><%= t "user.phone_number" %> </div>
                    <%= user.phone_number %>
                  </div>
                </div>
                <div class="col-md-6 mb-3 ml-auto">
                  <div class="row">
                    <div class="d-inline font-weight-bold"><%= t "user.birthday" %> </div>
                    <%= l(user.birthday, format: :notime) %>
                  </div>
                  <div class="row">
                    <div class="d-inline font-weight-bold"><%= t "user.gender" %> </div>
                    <%= t("user.gen.#{user.gender}") %>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="d-inline font-weight-bold"><%= t "user.address" %></div>
                <%= user.address %>
              </div>
              <div class="font-weight-bold row"><%= t "admin_tab.booking" %></div>
              <div class="table-pos">
                <table class="table table-striped table-inverse table-responsive">
                  <thead class="thead-inverse">
                    <tr>
                      <th><%= t "created_at" %></th>
                      <th><%= t "tour.place" %></th>
                      <th><%= t "tour.start_date" %></th>
                      <th><%= t "tour.end_date" %></th>
                      <th><%= t "tour.quantity" %></th>
                      <th><%= t "tour.price" %></th>
                      <th><%= t "tour.total" %></th>
                      <th><%= t "booking.payment" %></th>
                      <th class="text-center"><%= t "control" %></th>
                    </tr>
                  </thead>
                    <tbody>
                      <%= render partial: "admin/users/booking", collection: user.bookings, as: @bookings %>
                    </tbody>
                </table>
              </div>
              <div class="mb-4">
                <button class="btn btn-primary" data-dismiss="modal" type="button">
                  <i class="fas fa-times mr-1"></i>
                  <%= t "close" %>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </td>
</tr>
