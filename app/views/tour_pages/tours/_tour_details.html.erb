<div class="tour-modal modal fade" id="tourModal<%= tour.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="close-modal" data-dismiss="modal">
        <%= image_tag "close-icon.svg", alt: "Close modal" %>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag "tour/0#{@img_id}-full.jpg", class: "img-fluid" %>
          </div>
          <div class="col-md-6">
            <div class="modal-body">
              <h2 class="text-uppercase"><%= tour.title %></h2>
              <div class="table-pos">
                <table class="table table-striped table-inverse table-responsive">
                  <thead class="thead-inverse">
                    <tr>
                      <th><%= t "tour.start_date" %></th>
                      <th><%= t "tour.end_date" %></th>
                      <th><%= t "tour.price" %></th>
                      <th><%= t "booking.booking_now" %></th>
                    </tr>
                  </thead>
                    <tbody>
                      <%= render partial: "tour_pages/tours/list_detail", locals: {tours: tour.tour_details} %>
                    </tbody>
                </table>
              </div>
              <p>
                <%= tour.description %>
              </p>
              <div class="mb-4">
                <button class="btn btn-primary" data-dismiss="modal" type="button">
                  <i class="fas fa-times mr-1"></i>
                  <%= t "close" %>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
