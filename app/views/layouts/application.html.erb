<!DOCTYPE html>
<html>
  <head>
    <title><%= t "booking_tour" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= link_to locale: :en do %>
      <%= image_tag("EN.png", alt: t("english"), class: "img-lang") %>
    <% end %>
    <%= link_to locale: :vi do %>
      <%= image_tag("VN.png", alt: t("vietnamese"), class: "img-lang") %>
    <% end %>
    <%= yield %>
  </body>
</html>
